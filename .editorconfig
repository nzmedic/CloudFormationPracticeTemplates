# .editorconfig
# credit: https://hodgkins.io/up-your-cloudformation-game-with-vscode

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Keeps CloudFormation YAML files standard while allowing the use of tabs or spaces
[*.yaml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
